<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.sns.post.dao.PostMapper">
 	
 	<insert id="insertContent" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW() 			
 		)
 		
 	</insert>
 	<select id="selectPostList" resultType="com.sns.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
		ORDER BY `id` desc
 		
 	</select>
 	
 	<delete id="deleteCommentByPostId" parameterType="int">
 		DELETE FROM
 			`comment`
 		WHERE
 			`postId` = #{postId}
 			
 	</delete>
 	<select id="selectPostListByUserId" resultType="com.sns.post.model.Post" parameterType="int">
 		SELECT
 			`id`
 			, `userId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 		ORDER BY `id` desc
 	</select>
 	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.sns.post.model.Post">
 	 	SELECT
 			`id`
 			, `userId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</select>
 	
 	<delete id="deletePostByPostIdUserId" parameterType="map">
 		DELETE
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 		AND
 			`userId` = #{userId}
 	</delete>
 </mapper>